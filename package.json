{
  "name": "lift-monorepo",
  "version": "0.3.2",
  "private": true,
  "description": "React component for headings",
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "bmthd <jougennotuki67@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmthd/lift"
  },
  "homepage": "https://github.com/bmthd/lift",
  "type": "module",
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "scripts": {
    "build": "bun run build:packages",
    "build:packages": "bun run --filter packages/* build",
    "dev": "bun run --filter demo/* dev",
    "format:test": "biome format ./packages",
    "format:fix": "biome format --write ./packages",
    "lint:test": "biome lint ./packages",
    "lint:safe-fix": "biome check --apply ./packages",
    "lint:fix": "biome check --apply-unsafe ./packages",
    "test": "bun run --filter packages/* test",
    "typecheck": "bun run --filter packages/* typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.2",
    "@vitejs/plugin-react": "^5.0.0",
    "happy-dom": "^18.0.0",
    "@bmthd/lift": "workspace:*",
    "tsdown": "^0.17.0-beta.6",
    "typescript": "^5.4.5",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  },
  "packageManager": "bun@1.2.20"
}
